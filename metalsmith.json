{
  "source": "./src",
  "destination": "./build",
  "metadata": {
    "title": "David Moody's Blog",
    "description": "A blog about programming"
  },
  "plugins": {
    "metalsmith-drafts": {},
    "metalsmith-markdown": {},
    "metalsmith-permalinks": {
      "pattern": ":title"
    },
    "metalsmith-templates": {
      "engine": "swig",
      "directory": "_layouts"
    }
  }
}
